{
    "manifest_version": 2,
    "name": "research-notes",
    "description": "Save research notes",
    "version": "1.0.0",
    "icons": { 
        "16": "./icons/16.png",
        "32": "./icons/32.png",
        "48": "./icons/48.png",
        "128": "./icons/128.png" 
    },
    "browser_action": {
        "default_popup": "extension-menu.html"
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
    "permissions": [
        "tabs",
        "activeTab",
        "contextMenus"
    ]
}